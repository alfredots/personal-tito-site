{
  "plugins": ["prettier-plugin-astro", "prettier-plugin-tailwindcss"],
  "overrides": [
    {
      "files": "*.astro",
      "options": {
        "parser": "astro",
        "arrowParens": "always",
        "bracketSpacing": true,
        "endOfLine": "auto",
        "htmlWhitespaceSensitivity": "ignore",
        "insertPragma": false,
        "jsxBracketSameLine": true,
        "packageManager": "pnpm",
        "printWidth": 200,
        "proseWrap": "never",
        "requirePragma": false,
        "semi": true,
        "singleQuote": false,
        "tabWidth": 4,
        "useTabs": true,
        "vueIndentScriptAndStyle": true,
        "trailingComma": "none"
      }
    }
  ]
}
